@model DemoDashboardDevice.Models.Person
  
@{  
    ViewData["Title"] = "New Employee";
}    

@using (Html.BeginForm())   
{  
    @Html.AntiForgeryToken()  
      
<section class="content">
    <div class="row" id="table_col_all">
        <div class="col-xs-12">
            <div class="card card-solid card-success">
                <div class="card-header with-border">
                    <h3 class="card-title">Nuevo Colaborador</h3>
    </div>
    <div class="form-group">  
            @Html.LabelFor( model => model.name, "Nombre Completo",htmlAttributes: new { @class = "control-label col-md-2" })  
            <div class="col-md-2" >  
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })  
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger"  })  
            </div>  
        </div> 
        <div class="form-group">  
            @Html.LabelFor(model => model.identity_number,"Rut", htmlAttributes: new { @class = "control-label col-md-2" })  
            <div class="col-md-2">  
                @Html.EditorFor(model => model.identity_number, new { htmlAttributes = new { @class = "form-control" } })  
                @Html.ValidationMessageFor(model => model.identity_number, "", new { @class = "text-danger" })  
            </div>  
        </div>     

        <div class="form-group">  
            @Html.LabelFor(model => model.company_name, "Nombre Compañia",htmlAttributes: new { @class = "control-label col-md-2" })  
            <div class="col-md-2">  
            @Html.DropDownList("company_name", new List<SelectListItem>
                    {   new SelectListItem { Text = "Compañia 1", Value = "1", Selected=true},
                        new SelectListItem { Text = "Compañia 2", Value = "2"},
                        new SelectListItem { Text = "Compañia 3", Value = "3"}
                    }, "Seleccione Compañia",new { @class = "form-select"  })                
            @Html.ValidationMessageFor(model => model.company_name, "", new { @class = "text-danger" })  
            </div>  
        </div>
        <div class="form-group">  
            @Html.LabelFor(model => model.proximity_card,"Tarjeta de Proximidad", htmlAttributes: new { @class = "control-label col-md-2" })  
            <div class="col-md-2">  
                @Html.EditorFor(model => model.proximity_card, new { htmlAttributes = new { @class = "form-control" } })  
                @Html.ValidationMessageFor(model => model.proximity_card, "", new { @class = "text-danger" })  
            </div>  
        </div>

        <div class="form-group" >  
            @Html.LabelFor(model => model.allowed_methods, "Métodos Permitidos",htmlAttributes: new { @class = "control-label col-md-2" })  
            <div class="col-md-4">Método 1
            @Html.CheckBox("Método 1", false, new { id = "metodo1" , name= "metodo1"  })
            </div>  
            <div class="col-md-4">Método 2
            @Html.CheckBox("Método 2", false, new { id = "metodo2" , name= "metodo1" })
            </div>  
        </div>
        <div class="form-group">  
            @Html.LabelFor(model => model.devices, "Dispositivos",htmlAttributes: new { @class = "control-label col-md-2" })  
            <div class="col-md-4">Dispositivo 1
            @Html.CheckBox("Dispositivo 1", false, new { id = "dispositivo1" , name= "metodo1"  } )
            </div>  
            <div class="col-md-4">Dispositivo 2
            @Html.CheckBox("Dispositivo 2", false, new { id = "dispositivo2" , name= "metodo1" })
            </div>  
        </div>
        <div class="form-group">  
            <div class="col-md-offset-2 col-md-10">  
                <input type="submit" value="Create" class="btn btn-default" />  
            </div>  
        </div>  
            </div>
        </div>
    </div>
</section>
}  
  
<div>  
    @Html.ActionLink("Volver", "Index","Employee")  
</div>  

